border-1px($color)
  position: relative
  &:after
    display: block
    position: absolute
    left: 0
    bottom: 2px
    width: 100%
    border-top: 1px solid $color
    content: ' '

border-none()
  &:after
    display none

bg-image($url)
  background-image url($url+"@2x.png")
  @media (-webkit-min-device-pixel-ratio: 2),(min-device-pixel-ratio: 3)
    background-image url($url+"@3x.png")

.bounceIn-transition
  animation-direction 1s
  animation-fill-mode both

@keyframes bounceIn-enter
  from 20%, 40%, 60%, 80%, to
    animate-timing-function cubic-bezier(0.215, 0.610, 0.355, 1.000)
  0%
    opacity 0
    transform scale3d(.3, .3, .3)
  20%
    transform scale3d(1.1, 1.1, 1.1)
  40%
    transform scale3d(.9, .9, .9)
  60%
    transform scale3d(1.03, 1.03, 1.03)
  80%
    transform scale3d(.97, .97, .97)
  to
    opacity 1
    transform scale3d(1, 1, 1)

.bounceIn-enter, .bounceIn-leave
  animation-name bounceIn-enter


